<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.DetailsMovieFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreen"
        android:elevation="@dimen/d2">

        <TextView
            android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d16"
            android:textColor="@android:color/white"
            android:textSize="@dimen/s36" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/poster_img_detailed"
                    android:layout_width="@dimen/d125"
                    android:layout_height="@dimen/d175"
                    android:layout_marginLeft="@dimen/d8"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d8"
                    android:layout_marginLeft="@dimen/d16"
                    android:layout_marginTop="@dimen/d8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date_label"
                        style="@style/labels_style"
                        android:fontFamily="sans-serif-condensed" />

                    <TextView
                        android:id="@+id/rate_label"
                        style="@style/labels_style"
                        android:fontFamily="sans-serif-condensed" />

                    <ToggleButton
                        android:id="@+id/favorite_btn"
                        android:layout_width="@dimen/d48"
                        android:layout_height="@dimen/d48"
                        android:layout_marginTop="@dimen/d20"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/desc_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d8"
                android:layout_marginTop="@dimen/d20"
                android:fontFamily="sans-serif-condensed" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>